#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e

if [ -n "$BUILDPACK_DEBUG" ]; then
    set -x
fi

BUILD_DIR=$1
CACHE_DIR=$2

BIN_PATH="$BUILD_DIR/bin"
LIB_PATH="$BUILD_DIR/vendor/vips/lib"
TMP_PATH="$BUILD_DIR/tmp"
mkdir -p $CACHE_DIR $BIN_PATH $LIB_PATH $TMP_PATH

VIPS_URL="https://github.com/libvips/libvips/releases/download/v8.12.1/vips-8.12.1.tar.gz"
VIPS_TAR="$CACHE_DIR/vips.tar.gz"
VIPS_BINARIES="$TMP_PATH/bin"
VIPS_LIBS="$TMP_PATH/lib"

if [ -f $VIPS_TAR ]; then
  echo "-----> Using vips tar from cache"
else
  echo "-----> Downloading vips tar"
  curl -L $VIPS_URL -o $VIPS_TAR
fi

echo "-----> Unpacking tar"
tar -xf $VIPS_TAR -C $TMP_PATH

echo "-----> Setting permissions"
chmod +x $VIPS_BINARIES/*

echo "-----> Moving binaries to the right place"
mv $VIPS_BINARIES/* $BIN_PATH/

echo "-----> Moving libs to the right place"
mv $VIPS_LIBS/* $LIB_PATH/

echo "-----> Compile VIPS and store in in vendor/vips"
pushd $1/vendor/vips
./configure
make V=0 -J 4
make install

echo "-----> Cleaning up"
rm -rf $VIPS_PATH

echo "-----> Preparing runtime environment"
mkdir -p $BUILD_DIR/.profile.d
echo "export PATH=\$PATH:/app/vendor/vips/bin" > $BUILD_DIR/.profile.d/vips.sh
echo "export LD_LIBRARY_PATH=\$LD_LIBRARY_PATH:/app/vendor/vips/lib" >> $BUILD_DIR/.profile.d/vips.sh
echo "export LIBRARY_PATH=\$LD_LIBRARY_PATH:/app/vendor/vips/lib" >> $BUILD_DIR/.profile.d/vips.sh
